
@model IEnumerable<MvcApplication1.ViewModels.CityHotels_VM>
@{
    ViewBag.Title = "Hotel Search Results";
}

<h1>Search Results</h1>
<br />

<br /><br />


<table>
@foreach (var item in Model) {
    <tr>
        
        <td>
                Hotel Name: @Html.DisplayFor(modelItem => item.HotelName)
                <br />
        
                City      : @Html.DisplayFor(modelItem => item.HotelCity)
            <br />
        
                Country    : @Html.DisplayFor(modelItem => item.HotelCountry)
            <br />
        
                Overall Rating     : @Html.DisplayFor(modelItem => item.HotelOverallRating)
            <br />

            @Html.ActionLink("Rate","Create",new{HotelId = item.Id})

            <br /><br />
                        
                
         </td>
    </tr>
   
}

</table>

